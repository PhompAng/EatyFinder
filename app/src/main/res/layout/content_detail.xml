<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_party_detail">

    <android.support.v7.widget.CardView
        android:id="@+id/detailTimeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp">
            <ImageView
                android:id="@+id/detailDateImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/colorAccent"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_event_black_24dp"/>

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:text="Thursday"
                android:layout_toEndOf="@+id/detailDateImg"
                android:layout_marginStart="24dp" />
            <TextView
                android:id="@+id/detailDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailDate"
                android:layout_alignLeft="@id/detailDate"
                android:text="Date"/>
            <View
                android:id="@+id/detailDateDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorDivider"
                android:layout_below="@id/detailDateText"
                android:layout_alignLeft="@id/detailDate"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/detailTimeImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_access_time_black_24dp"
                android:layout_below="@+id/detailDateDivider"/>
            <TextView
                android:id="@+id/detailTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:text="19:00 P.M."
                android:layout_toEndOf="@+id/detailTimeImg"
                android:layout_below="@id/detailDateDivider"
                android:layout_marginStart="24dp" />
            <TextView
                android:id="@+id/detailTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailTime"
                android:layout_alignLeft="@id/detailTime"
                android:text="Time"/>
            <View
                android:id="@+id/detailTimeDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorDivider"
                android:layout_below="@id/detailTimeText"
                android:layout_alignLeft="@id/detailDate"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/detailLocationImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_below="@+id/detailTimeDivider"/>
            <TextView
                android:id="@+id/detailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:text="Hot pot"
                android:layout_toEndOf="@+id/detailLocationImg"
                android:layout_below="@id/detailTimeDivider"
                android:layout_marginStart="24dp" />
            <TextView
                android:id="@+id/detailLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailLocation"
                android:layout_alignLeft="@id/detailLocation"
                android:text="Location"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/detailAboutCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detailTimeCard"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:text="About"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deal total price"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/detailPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_vertical_padding"
                    android:text="฿ 399"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price per person"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/detailPricePerPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_vertical_padding"
                    android:text="฿ 345"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/colorDivider"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="People"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/detailPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_vertical_padding"
                    android:text="3/4 คน"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/detailDescCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detailAboutCard"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:text="Description"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
            <TextView
                android:id="@+id/detailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_vertical_padding"
                android:text="“Lorem ipsum dolor sit amet, consectetur adipiscing elit.”"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
