<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.example.phompang.eatyfinder.ProfileFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/toolbarImg"
                android:layout_width="0dp"
                android:layout_height="256dp"
                android:scaleType="centerCrop"
                android:src="@drawable/breakfast"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <android.support.v7.widget.CardView
                android:id="@+id/meEmailCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbarImg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingBottom="16dp">
                        <ImageView
                            android:id="@+id/NameImg"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:tint="@color/colorAccent"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_person_black_24dp"/>

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:text="John Doe"
                            android:layout_toEndOf="@+id/NameImg"
                            android:layout_marginStart="24dp" />
                        <TextView
                            android:id="@+id/nameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name"
                            android:layout_alignLeft="@id/name"
                            android:text="Name"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingBottom="16dp">
                        <ImageView
                            android:id="@+id/meEmailImg"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:tint="@color/colorAccent"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_email_black_24dp"/>

                        <TextView
                            android:id="@+id/meEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:text="ohlook@it.go"
                            android:layout_toEndOf="@+id/meEmailImg"
                            android:layout_marginStart="24dp" />
                        <TextView
                            android:id="@+id/meEmailText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/meEmail"
                            android:layout_alignLeft="@id/meEmail"
                            android:text="Email"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/meEmailCard"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
